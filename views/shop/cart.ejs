<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <div class="grid">
                    <% for (let product of products) { %>
                        <li class="card__item">
                           <h1><%= product.productId.title %></h1>
                           
                                <p><strong>Price: $<%= product.productId.price %></strong></p>
                                <p><strong>Quantity: <%= product.quantity %></strong></p>
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" name="productId" value="<%= product.productId._id %>">
                                    <button type="submit" class="btn">Remove From Cart</button>
                                </form>
                           
                           
                           
                            
                        </li>
                    <% } %>
                </div>
            <% } else { %>
                <h1>No Products Found In Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>